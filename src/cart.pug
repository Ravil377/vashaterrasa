append variables
    - var title = 'Главная страница сайта'
    - var pageClass = 'homepage'
    - var menuHref = '/'

block cart 
    .outer
        .inner(style="padding-top: 27px; border-top: 1px solid #584C3B;")
            nav.breadcrumbs
                ul.breadcrumbs__list
                    li
                        a(href="/") Главная
                        span.breadcrumbs__divider \
                    li.is-active #{title}
    section.cart 
        .outer 
            .inner 
                h1.title Корзина покупок
                .cart__container 
                    ul.cart__list
                        li.cart__item 
                            img(src="./images/catalog/product.jpg" alt="Товар").cart__img
