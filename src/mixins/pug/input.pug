mixin input(labeltext, type, idinput)
    -
        var labeltext = labeltext || '';
        var type = type || '';
        var idinput = idinput || '';

    .form__placeholder-container.form__placeholder-container--js
        input(type=`${type}` name="" placeholder=" " required="required" id=`${idinput}` class="form__input--js")&attributes(attributes)
        label(for=`${idinput}`)!=labeltext
        //- span(class=`input__error ${idinput}-error`)

